<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAdmin.Listevent_Admin">

    <androidx.cardview.widget.CardView
        android:layout_width="376dp"
        android:layout_height="156dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/colorPrimaryDark_KKU"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameEvent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/thaisansneue_semi_bold"
                    android:paddingLeft="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="รายชื่อกิจกรรม"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/thaisansneue_semi_bold"
                        android:paddingLeft="20dp"
                        android:text="เริ่มวันที่"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/startDay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/thaisansneue_semi_bold"
                        android:paddingLeft="20dp"
                        android:text="0"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/thaisansneue_semi_bold"
                        android:paddingLeft="20dp"
                        android:text="เวลา"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/startTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/thaisansneue_semi_bold"
                        android:paddingLeft="20dp"
                        android:text="0"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/thaisansneue_semi_bold"
                            android:paddingLeft="20dp"
                            android:text="สิ้นสุด"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/endDay"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/thaisansneue_semi_bold"
                            android:paddingLeft="20dp"
                            android:text="0"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/thaisansneue_semi_bold"
                            android:paddingLeft="20dp"
                            android:text="เวลา"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/endTime1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/thaisansneue_semi_bold"
                            android:paddingLeft="20dp"
                            android:text="0"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="180dp"
                    android:text="หน่วยกิตด้านที่"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="18sp"
                    tools:fontFamily="@font/thaisansneue_semi_bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textUnit1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/thaisansneue_semi_bold"
                    android:gravity="left"
                    android:text="1"
                    android:textColor="@android:color/background_light"
                    android:textSize="90dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>